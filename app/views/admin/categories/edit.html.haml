%h2 Edytuj kategoriÄ™

= semantic_form_for category, url: admin_category_path(category.id), format: :html, class: 'form-signin', method: :put do |f|
  %li.icon
    %label.label Ikona kategorii
    = image_tag "categories/#{category.unique_id}.png", alt: "Ikona kategorii", width: 24
  = f.input :unique_id, label: "Unikalna nazwa", input_html: {disabled: "true"}
  = f.submit value: "Zapisz zmiany", class: "btn btn-large btn-primary"
